<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4dp" />
            <padding android:bottom="@dimen/common_padding_half" android:left="@dimen/common_padding_half" android:right="@dimen/common_padding_half" android:top="@dimen/common_padding_half" />
            <solid android:color="@color/colorGray" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <corners android:radius="4dp" />
            <padding android:bottom="@dimen/common_padding_half" android:left="@dimen/common_padding_half" android:right="@dimen/common_padding_half" android:top="@dimen/common_padding_half" />
            <solid android:color="@color/colorBlue" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="4dp" />
            <padding android:bottom="@dimen/common_padding_half" android:left="@dimen/common_padding_half" android:right="@dimen/common_padding_half" android:top="@dimen/common_padding_half" />
            <solid android:color="@color/colorDarkBlue" />
        </shape>
    </item>
</selector>