<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/loading_dialog_size"
    android:layout_height="@dimen/loading_dialog_size"
    android:background="@drawable/dra_coffee_loading_dialog_bg"
    android:elevation="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_coffee"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/tvTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/blank_s"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/please_wait"
            android:textColor="#000000"
            android:textSize="@dimen/text_s" />
    </LinearLayout>
</RelativeLayout>
