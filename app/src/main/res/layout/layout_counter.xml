<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5dp">

    <TextView
        android:id="@+id/tv_title"
        style="@style/StyleCommonText"
        android:layout_gravity="center_horizontal"
        android:text="距生日天数"
        android:textSize="@dimen/large_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_end_time"
        style="@style/StyleCommonText.Gray"
        android:layout_gravity="center_horizontal"
        android:text="下次生日："
        android:textSize="@dimen/large_text_size" />

    <LinearLayout
        android:id="@+id/ll_left_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hundredOfDay"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_2dp"
            android:background="@drawable/bg_counter"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_tensOfDay"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_2dp"
            android:background="@drawable/bg_counter"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_unitsOfDay"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_2dp"
            android:background="@drawable/bg_counter"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            style="@style/StyleCommonText"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="天"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_tensOfHour"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_2dp"
            android:background="@drawable/bg_counter"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_unitsOfHour"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_margin="@dimen/dimen_2dp"
            android:background="@drawable/bg_counter"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_hour"
            style="@style/StyleCommonText"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dimen_4dp"
            android:text="时"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>