<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/loading_dialog_size"
    android:layout_height="@dimen/loading_dialog_size"
    android:background="@drawable/dra_loading_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ProgressBar
            style="@android:style/Widget.Holo.ProgressBar"
            android:layout_width="@dimen/loading_dialog_icon_size"
            android:layout_height="@dimen/loading_dialog_icon_size"
            android:layout_gravity="center_horizontal"
            android:indeterminateTintMode="src_atop" />

        <TextView
            android:id="@+id/tvTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/blank_s"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="@string/common_loading"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_s" />
    </LinearLayout>
</RelativeLayout>
